<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <TextView
                android:text="חפש עד מרחק"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="50m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="105dp" />

            <com.appyvet.rangebar.RangeBar
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rangebar"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                custom:tickStart="5"
                custom:tickInterval="1"
                custom:tickEnd="10"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp">

            <TextView
                android:text="הגדרות כלליות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:textColor="@color/secondPrimaryColor"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="11dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="0.8"
            android:background="#ffffff">

            <Switch
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:id="@+id/switch1"
                android:track="@drawable/switch_track_selector"
                android:switchMinWidth="75dp"
                android:thumb="@drawable/switch_thumb_selector"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="101dp" />

            <Switch
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:id="@+id/switch2"
                android:track="@drawable/switch_track_selector"
                android:switchMinWidth="75dp"
                android:thumb="@drawable/switch_thumb_selector"
                android:layout_above="@+id/switch1"
                android:layout_alignStart="@+id/switch1" />

            <Switch
                android:layout_width="75dp"
                android:layout_height="25dp"
                android:id="@+id/switch3"
                android:track="@drawable/switch_track_selector"
                android:switchMinWidth="75dp"
                android:thumb="@drawable/switch_thumb_selector"
                android:layout_below="@+id/switch1"
                android:layout_alignStart="@+id/switch1" />

            <TextView
                android:text="מיילים"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_alignBaseline="@+id/switch3"
                android:layout_alignBottom="@+id/switch3"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="התראות חדשות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"

                android:layout_above="@+id/switch1"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="הודעות חדשות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_above="@+id/switch3"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="התראות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="#ffffff">

            <TextView
                android:text="הצג מרחק ב"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <Button
                android:text="Km."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp" />

            <Button
                android:text="Mi."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <TextView
                android:text="התנתק"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:gravity="center" />
        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete_account"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView5" />

            <TextView
                android:text="מחק משתמש"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/secondPrimaryColor"
                android:paddingTop="6dp" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>